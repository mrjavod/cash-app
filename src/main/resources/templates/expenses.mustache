{{> header}}
<style>
    table, tr, th, td{
        border: 1px solid black;
        border-collapse: collapse;
        padding: 10px;
    }
</style>
<div>
    <h1>Expenses</h1>
    <a href="/home">Home</a>

    <form method="post" action="searchExpenses">
        <input type="date" name="searchDate" placeholder="Date" required>
        <input type="submit" value="Search">
    </form>

    <table>
        <tr>
            <th>Description</th>
            <th>Cost</th>
            <th>Date</th>
        </tr>
        {{#entriesList}}
        <tr>
            <td>{{description}}</td>
            <td>{{cost}}</td>
            <td>{{entryDate}}</td>
        </tr>
        {{/entriesList}}
    </table>
</div>
{{> footer}}